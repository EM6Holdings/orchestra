# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

[*.py]
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[**.html]
max_char = 78
brace_style = expand
